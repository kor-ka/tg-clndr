{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "../entity.ts",
    "../src/view/MainScreen.ts",
    "../src/shared"
  ]
}